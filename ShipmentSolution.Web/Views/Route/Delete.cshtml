@model ShipmentSolution.Web.ViewModels.RouteViewModels.RouteDeleteViewModel

@{
    ViewData["Title"] = "Delete Route";
}

<h2>Are you sure you want to delete this route?</h2>

<div>
    <h4>@Model.StartLocation → @Model.EndLocation</h4>
    <p><strong>Stops:</strong> @Model.Stops</p>
    <p><strong>Distance:</strong> @Model.Distance km</p>
    <p><strong>Priority:</strong> @Model.Priority</p>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="RouteId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
