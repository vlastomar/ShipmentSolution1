@model ShipmentSolution.Web.ViewModels.ShipmentViewModels.ShipmentCreateViewModel

@{
    ViewData["Title"] = "Create Shipment";
}

<h2>Create Shipment</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Weight" class="form-label"></label>
        <input asp-for="Weight" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Dimensions" class="form-label"></label>
        <input asp-for="Dimensions" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ShippingMethod" class="form-label"></label>
        <input asp-for="ShippingMethod" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ShippingCost" class="form-label"></label>
        <input asp-for="ShippingCost" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="DeliveryDate" class="form-label"></label>
        <input asp-for="DeliveryDate" class="form-control" type="date" />
    </div>
    <div class="mb-3">
        <label asp-for="CustomerId" class="form-label"></label>
        <select asp-for="CustomerId" class="form-control" asp-items="Model.Customers"></select>
    </div>
    <div class="mb-3">
        <label asp-for="CarrierId" class="form-label"></label>
        <select asp-for="CarrierId" class="form-control" asp-items="Model.Carriers"></select>
    </div>
    <div class="mb-3">
        <label asp-for="RouteId" class="form-label"></label>
        <select asp-for="RouteId" class="form-control" asp-items="Model.Routes"></select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success me-2">Submit</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
