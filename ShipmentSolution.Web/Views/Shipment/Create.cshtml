@model ShipmentSolution.Web.ViewModels.ShipmentViewModels.ShipmentCreateViewModel

@{
    ViewData["Title"] = "Create Shipment";
}

<h2>Create Shipment</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Weight" class="form-label"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Dimensions" class="form-label"></label>
        <input asp-for="Dimensions" class="form-control" />
        <span asp-validation-for="Dimensions" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ShippingMethod" class="form-label"></label>
        <select asp-for="ShippingMethod" class="form-select" asp-items="Model.ShippingMethods">
            <option value="">-- Select Method --</option>
        </select>
        <span asp-validation-for="ShippingMethod" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ShippingCost" class="form-label"></label>
        <input asp-for="ShippingCost" class="form-control" />
        <span asp-validation-for="ShippingCost" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DeliveryDate" class="form-label"></label>
        <input asp-for="DeliveryDate" type="date" class="form-control" />
        <span asp-validation-for="DeliveryDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CustomerId" class="form-label"></label>
        <select asp-for="CustomerId" class="form-select" asp-items="Model.Customers">
            <option value="">-- Select Customer --</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CarrierId" class="form-label"></label>
        <select asp-for="CarrierId" class="form-select" asp-items="Model.Carriers">
            <option value="">-- Select Carrier --</option>
        </select>
        <span asp-validation-for="CarrierId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RouteId" class="form-label"></label>
        <select asp-for="RouteId" class="form-select" asp-items="Model.Routes">
            <option value="">-- Select Route --</option>
        </select>
        <span asp-validation-for="RouteId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success me-2">Create</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
