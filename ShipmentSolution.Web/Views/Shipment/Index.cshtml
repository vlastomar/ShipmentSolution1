@model ShipmentSolution.Web.ViewModels.Common.PaginatedList<ShipmentSolution.Web.ViewModels.ShipmentViewModels.ShipmentViewModel>

@{
    ViewData["Title"] = "All Shipments";
    Layout = "_Layout";

    var shippingMethods = ViewBag.ShippingMethods as List<string> ?? new List<string>();
    var currentShippingMethod = ViewBag.CurrentShippingMethod as string ?? "";
    var currentSearch = ViewBag.CurrentSearch as string ?? "";
}

@section Styles {
    <link rel="stylesheet" href="~/css/shipment.css" />
}

<div class="container content-wrapper">
    <h2>All Shipments</h2>

    <!-- Search / Reset / Create -->
    <form method="get" class="row mb-3 align-items-end">
        <div class="col-md-4">
            <input type="text" name="searchTerm" value="@currentSearch" class="form-control" placeholder="Search by Customer Name..." />
        </div>

        <div class="col-md-3">
            <select name="shippingMethod" class="form-select">
                <option value="">All Shipping Methods</option>
                @foreach (var method in shippingMethods)
                {
                    var selected = method == currentShippingMethod ? "selected=\"selected\"" : "";
                    @Html.Raw($"<option value=\"{method}\" {selected}>{method}</option>")
                }
            </select>
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-transparent-blue">Search</button>
            <a asp-action="Index" class="btn btn-secondary">Reset</a>
        </div>

        <div class="col-md-2 text-end">
            @if (User?.Identity?.IsAuthenticated == true && (User.IsInRole("RegisteredUser") || User.IsInRole("Administrator")))
            {
                <a asp-action="Create" asp-controller="Shipment" class="btn btn-transparent-green">Create Shipment</a>
            }
        </div>
    </form>

    @if (User?.Identity?.IsAuthenticated != true && !(Model?.Items?.Any() ?? false))
    {
        <div class="alert alert-warning text-center">
            You are not logged in, so only your associated shipments are shown (if any).<br />
            Please <a asp-area="Identity" asp-page="/Account/Login">log in</a> to manage your shipments.
        </div>
    }
    else if (Model?.Items?.Any() == true)
    {
        <!-- Shipment Table -->
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Customer</th>
                    <th>Shipping Method</th>
                    <th>Shipping Cost</th>
                    <th>Delivery Date</th>
                    @if (User?.Identity?.IsAuthenticated == true)
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var shipment in Model.Items)
                {
                    <tr>
                        <td>@shipment.CustomerName</td>
                        <td>@shipment.ShippingMethod</td>
                        <td>@shipment.ShippingCost.ToString("C")</td>
                        <td>@(shipment.DeliveryDate?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <td>
                                @if (User.IsInRole("RegisteredUser") || User.IsInRole("Administrator"))
                                {
                                    <a asp-action="Edit" asp-route-id="@shipment.ShipmentId" class="btn btn-sm btn-transparent-yellow me-2">Edit</a>
                                }

                                @if (User.IsInRole("Administrator"))
                                {
                                    <a asp-action="Delete" asp-route-id="@shipment.ShipmentId" class="btn btn-sm btn-transparent-red">Delete</a>
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>

        <!-- Pagination -->
        <nav aria-label="Shipment pagination">
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(Model.PageIndex - 1)"
                           asp-route-searchTerm="@currentSearch"
                           asp-route-shippingMethod="@currentShippingMethod">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled"><span class="page-link">Previous</span></li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.PageIndex)
                    {
                        <li class="page-item active"><span class="page-link">@i</span></li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-searchTerm="@currentSearch"
                               asp-route-shippingMethod="@currentShippingMethod">@i</a>
                        </li>
                    }
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@(Model.PageIndex + 1)"
                           asp-route-searchTerm="@currentSearch"
                           asp-route-shippingMethod="@currentShippingMethod">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled"><span class="page-link">Next</span></li>
                }
            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info text-center">
            No shipments found.
        </div>
    }

    <!-- Back Button -->
    <div class="text-center mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-transparent-blue">Back</a>
    </div>
</div>
