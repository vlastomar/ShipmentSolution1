@model ShipmentSolution.Web.ViewModels.ShipmentViewModels.ShipmentDeleteViewModel

@{
    ViewData["Title"] = "Delete Shipment";
}

<h2>Delete Shipment</h2>

<h4>Are you sure you want to delete this shipment?</h4>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Shipping Method</dt>
        <dd class="col-sm-10">@Model.ShippingMethod</dd>

        <dt class="col-sm-2">Shipping Cost</dt>
        <dd class="col-sm-10">@Model.ShippingCost.ToString("C")</dd>

        <dt class="col-sm-2">Delivery Date</dt>
        <dd class="col-sm-10">@(Model.DeliveryDate?.ToString("yyyy-MM-dd") ?? "N/A")</dd>

    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ShipmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
