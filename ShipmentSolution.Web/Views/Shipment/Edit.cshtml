@model ShipmentSolution.Web.ViewModels.ShipmentViewModels.ShipmentEditViewModel

@{
    ViewData["Title"] = "Edit Shipment";
}

<h2>Edit Shipment</h2>

<form asp-action="Edit" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ShipmentId" />

    <div class="col-md-6">
        <label asp-for="Weight" class="form-label"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Dimensions" class="form-label"></label>
        <input asp-for="Dimensions" class="form-control" />
        <span asp-validation-for="Dimensions" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="ShippingMethod" class="form-label"></label>
        <select asp-for="ShippingMethod" asp-items="Model.ShippingMethods" class="form-select">
            <option value="">-- Select Method --</option>
        </select>
        <span asp-validation-for="ShippingMethod" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="ShippingCost" class="form-label"></label>
        <input asp-for="ShippingCost" class="form-control" />
        <span asp-validation-for="ShippingCost" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="DeliveryDate" class="form-label"></label>
        <input asp-for="DeliveryDate" type="date" class="form-control" />
        <span asp-validation-for="DeliveryDate" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="CustomerId" class="form-label"></label>
        <select asp-for="CustomerId" asp-items="Model.Customers" class="form-select">
            <option value="">-- Select Customer --</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
