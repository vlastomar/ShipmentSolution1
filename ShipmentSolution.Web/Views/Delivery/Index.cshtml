@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@model ShipmentSolution.Web.ViewModels.Common.PaginatedList<ShipmentSolution.Web.ViewModels.DeliveryViewModels.DeliveryViewModel>

@{
    ViewData["Title"] = "All Deliveries";
    Layout = "_Layout";
    bool isAdmin = User.IsInRole("Administrator");
    bool isRegistered = User.IsInRole("RegisteredUser");
    bool isLoggedIn = SignInManager.IsSignedIn(User);
}

<style>
    body {
        background-image: url('/images/shipment6.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .content-wrapper {
        background-color: rgba(255, 255, 255, 0.15);
        padding: 2rem;
        border-radius: 12px;
        margin-top: 1rem;
    }

    .btn-transparent-green {
        background-color: rgba(40, 167, 69, 0.3);
        color: white;
        border: none;
    }

    .btn-transparent-green:hover {
        background-color: rgba(40, 167, 69, 0.5);
    }

    .btn-transparent-yellow {
        background-color: rgba(255, 193, 7, 0.3);
        color: black;
        border: none;
    }

    .btn-transparent-yellow:hover {
        background-color: rgba(255, 193, 7, 0.5);
    }

    .btn-transparent-red {
        background-color: rgba(220, 53, 69, 0.3);
        color: white;
        border: none;
    }

    .btn-transparent-red:hover {
        background-color: rgba(220, 53, 69, 0.5);
    }

    .btn-transparent-blue {
        background-color: rgba(13, 110, 253, 0.25);
        color: white;
        border: none;
    }

    .btn-transparent-blue:hover {
        background-color: rgba(13, 110, 253, 0.5);
    }

    .form-control,
    .form-select {
        background-color: rgba(255, 255, 255, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.3);
        color: #000;
    }

    .form-control:focus,
    .form-select:focus {
        box-shadow: 0 0 0 0.1rem rgba(0, 123, 255, 0.3);
    }

    table {
        background-color: rgba(255, 255, 255, 0.2);
    }

    .table thead {
        background-color: rgba(0, 0, 0, 0.6);
        color: white;
    }

    .table-bordered td,
    .table-bordered th {
        border-color: rgba(255, 255, 255, 0.4);
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(255, 255, 255, 0.08);
    }

    .table-striped tbody tr:nth-of-type(even) {
        background-color: rgba(255, 255, 255, 0.12);
    }

    .pagination .page-link {
        background-color: rgba(255, 255, 255, 0.5);
        color: black;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .pagination .page-item.active .page-link {
        background-color: rgba(0, 123, 255, 0.8);
        color: white;
        border-color: transparent;
    }

    .pagination .page-link:hover {
        background-color: rgba(0, 123, 255, 0.4);
        color: white;
    }
</style>

<div class="container content-wrapper">
    <h2>All Deliveries</h2>

    <form asp-action="Index" method="get" class="mb-4">
        <div class="row g-2 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Search</label>
                <input type="text" name="searchTerm" value="@ViewBag.CurrentSearch" class="form-control" placeholder="Customer or Carrier name..." />
            </div>

            <div class="col-md-4">
                <label class="form-label">Filter by Carrier</label>
                <select name="mailCarrierFilter" class="form-select">
                    <option value="">-- All --</option>
                    @foreach (var carrier in (List<string>)ViewBag.MailCarrierOptions)
                    {
                        <option value="@carrier" selected="@(carrier == (string?)ViewBag.CurrentCarrier)">@carrier</option>
                    }
                </select>
            </div>

            <div class="col-md-4 d-flex justify-content-between align-items-end">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-transparent-blue">Search</button>
                    <a asp-action="Index" class="btn btn-secondary">Reset</a>
                </div>
                @if (isAdmin || isRegistered)
                {
                    <a asp-action="Create" class="btn btn-transparent-green">Create Delivery</a>
                }
            </div>
        </div>
    </form>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Shipment</th>
                <th>Carrier</th>
                <th>Route</th>
                <th>Date Delivered</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var delivery in Model.Items)
            {
                <tr>
                    <td>@delivery.ShipmentInfo</td>
                    <td>@delivery.MailCarrierName</td>
                    <td>@delivery.Route</td>
                    <td>@delivery.DateDelivered.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (isAdmin || isRegistered)
                        {
                            <a asp-action="Edit" asp-route-id="@delivery.DeliveryId" class="btn btn-sm btn-transparent-yellow me-2">Edit</a>
                        }
                        @if (isAdmin)
                        {
                            <a asp-action="Delete" asp-route-id="@delivery.DeliveryId" class="btn btn-sm btn-transparent-red">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination justify-content-center">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.PageIndex - 1)"
                       asp-route-searchTerm="@ViewBag.CurrentSearch"
                       asp-route-mailCarrierFilter="@ViewBag.CurrentCarrier">Previous</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">Previous</span></li>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.PageIndex)
                {
                    <li class="page-item active"><span class="page-link">@i</span></li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-searchTerm="@ViewBag.CurrentSearch"
                           asp-route-mailCarrierFilter="@ViewBag.CurrentCarrier">@i</a>
                    </li>
                }
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(Model.PageIndex + 1)"
                       asp-route-searchTerm="@ViewBag.CurrentSearch"
                       asp-route-mailCarrierFilter="@ViewBag.CurrentCarrier">Next</a>
                </li>
            }
            else
            {
                <li class="page-item disabled"><span class="page-link">Next</span></li>
            }
        </ul>
    </nav>

    <!-- ✅ Back Button -->
    <div class="text-center mt-3">
         <a href="javascript:history.back()" class="btn btn-transparent-blue">Back</a>
    </div>
</div>
