@model ShipmentSolution.Web.ViewModels.DeliveryViewModels.DeliveryEditViewModel
@{
    ViewData["Title"] = "Edit Delivery";
}

<h2>Edit Delivery</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DeliveryId" />

    <div class="form-group">
        <label asp-for="ShipmentId"></label>
        <select asp-for="ShipmentId" asp-items="Model.Shipments" class="form-control"></select>
        <span asp-validation-for="ShipmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MailCarrierId"></label>
        <select asp-for="MailCarrierId" asp-items="Model.MailCarriers" class="form-control"></select>
        <span asp-validation-for="MailCarrierId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RouteId"></label>
        <select asp-for="RouteId" asp-items="Model.Routes" class="form-control"></select>
        <span asp-validation-for="RouteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateDelivered"></label>
        <input asp-for="DateDelivered" class="form-control" />
        <span asp-validation-for="DateDelivered" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
