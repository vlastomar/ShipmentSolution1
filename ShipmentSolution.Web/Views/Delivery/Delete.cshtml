@model ShipmentSolution.Web.ViewModels.DeliveryViewModels.DeliveryDeleteViewModel
@{
    ViewData["Title"] = "Delete Delivery";
}

<h2>Are you sure you want to delete this delivery?</h2>

<div>
    <h4>@Model.ShipmentInfo</h4>
    <p><strong>Carrier:</strong> @Model.MailCarrierName</p>
    <p><strong>Route:</strong> @Model.Route</p>
    <p><strong>Date Delivered:</strong> @Model.DateDelivered.ToString("yyyy-MM-dd")</p>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="DeliveryId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
