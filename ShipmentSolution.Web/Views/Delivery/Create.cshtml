@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@model ShipmentSolution.Web.ViewModels.DeliveryViewModels.DeliveryCreateViewModel

@{
    ViewData["Title"] = "Create Delivery";
}

<h2>Create Delivery</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ShipmentId"></label>
        <select asp-for="ShipmentId" class="form-control">
            <option value="">-- Select Shipment --</option>
            @foreach (var item in Model.Shipments)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="ShipmentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MailCarrierId"></label>
        <select asp-for="MailCarrierId" class="form-control">
            <option value="">-- Select Mail Carrier --</option>
            @foreach (var item in Model.MailCarriers)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="MailCarrierId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RouteId"></label>
        <select asp-for="RouteId" class="form-control">
            <option value="">-- Select Route --</option>
            @foreach (var item in Model.Routes)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="RouteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateDelivered"></label>
        <input asp-for="DateDelivered" class="form-control" />
        <span asp-validation-for="DateDelivered" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
