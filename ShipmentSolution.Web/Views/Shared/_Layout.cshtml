<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShipmentSolution.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShipmentSolution.Web.styles.css" asp-append-version="true" />

    <style>
        /* 🌐 Light Blue Navbar Background */
        .navbar {
            background-color: #e0f4ff !important;
        }

        /* 🔗 Nav links styling */
        .navbar-nav .nav-link {
            font-weight: 500;
            transition: color 0.3s ease;
        }

        /* 🎨 Colors match main buttons */
        .navbar-nav .nav-item:nth-child(1) .nav-link { color: #0d6efd !important; }  /* Home (blue) */
        .navbar-nav .nav-item:nth-child(2) .nav-link { color: #0d6efd !important; }  /* Shipments (blue) */
        .navbar-nav .nav-item:nth-child(3) .nav-link { color: #6c757d !important; }  /* Customers (gray) */
        .navbar-nav .nav-item:nth-child(4) .nav-link { color: #ffc107 !important; }  /* Deliveries (yellow) */
        .navbar-nav .nav-item:nth-child(5) .nav-link { color: #198754 !important; }  /* Mail Carriers (green) */
        .navbar-nav .nav-item:nth-child(6) .nav-link { color: #0dcaf0 !important; }  /* Routes (cyan) */

        /* ✨ Hover effect */
        .navbar-nav .nav-link:hover {
            text-decoration: underline;
            opacity: 0.8;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShipmentSolution.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Shipment" asp-action="Index">Shipments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Customer" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Delivery" asp-action="Index">Deliveries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MailCarrier" asp-action="Index">Mail Carriers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Route" asp-action="Index">Routes</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ShipmentSolution.Web
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
