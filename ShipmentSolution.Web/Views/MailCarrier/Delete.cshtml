@model ShipmentSolution.Web.ViewModels.MailCarrierViewModels.MailCarrierDeleteViewModel
<h2>Are you sure you want to delete this Mail Carrier?</h2>

<div>
    <h4>@Model.FullName</h4>
    <p>Email: @Model.Email</p>
    <p>Phone: @Model.PhoneNumber</p>
    <p>Status: @Model.Status</p>
    <p>Location: @Model.CurrentLocation</p>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="MailCarrierId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
